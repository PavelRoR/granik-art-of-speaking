#wishes
	background-image url(../img/backs/wishes.png)
	background-repeat no-repeat
	background-position: center
	// background-size contain
.wish-item
	margin 70px auto
	position relative
	border-radius: 70px;
	box-shadow: 0px 1px 44.16px 1.84px rgba(0, 0, 0, 0.1);
	padding 150px 20px 35px
	background-color #fff
	width 100%
	max-width 320px
	text-align center
	min-height 374px
	&-img
		position absolute
		left 0
		right 0
		margin 0 auto
		top -90px
		&-2
			top -87px
		&-3
			top -88px
		&-5
			top -94px
		&-6
			top -125px
		&-8
			top -89px