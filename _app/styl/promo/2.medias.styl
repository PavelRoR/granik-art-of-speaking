@media screen and (min-width 2256px)
	body
		font-size: 20px
	.container
		width 1400px
	header
		margin-bottom: 100px
	.main-subtitle
		margin-top: 120px
@media screen and (max-width 1199px)
	.main-subtitle
		margin-top: 35px
@media screen and (max-width 991px)
	.main-title
		margin-bottom: 0
@media screen and (max-width 767px)
	.header-logo
		float: none
		display block
		margin 0 auto 5px
	.contacts
		float: none
		text-align center
		line-height: 1
	.contact
		display inline-block
		line-height: 1
@media screen and (max-width 560px)
	#main
		padding 0 0 40px
	header
		margin-bottom: 10px
		padding 10px 0
	.header-logo
		width 70px
		margin-bottom: 0
	.contact
		font-size: 12px
	.main-title
		font-size: 20px
		span
			font-size: 24px
	.main-subtitle
		font-size: 20px
		margin 30px 0 10px
	footer
		font-size: 12px
		padding 15px 0
		h5
			font-size: 18px
	.soc-buttons a
		margin 10px 5px
@media screen and (max-width 385px)
	.main-title
		font-size: 18px
		span
			font-size: 20px
	.wrapper-decorated
		padding-top: 25px
	.main-subtitle
		font-size: 18px