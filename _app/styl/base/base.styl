*
	margin 0
	padding 0
	outline none
body
	font-size: 18px
	font-family: M
	color #000000
	background-color #fff
	line-height: 1.5
a
	color: #000
	&:focus
		outline: 0
		text-decoration none
	&:hover
		text-decoration none
h1,h2,h3,h4,h5,h6
	font-weight normal
	margin 0
button
	border none
section
header
footer
	width 100%
	display block
.wrapper-decorated
	padding-top: 58px
	position relative
	z-index 50
	&:before
		content ''
		display block
		width 100%
		height 121%
		padding-top: 31.25%
		margin 0 auto
		top 0
		left 0
		right 0
		position absolute
		background-image url(../img/images/wrapper.png)
		background-repeat no-repeat
		background-position: center
		background-size 100% 100%
.video-wrapper
	margin 0 auto
	position relative
	width 90%
	top 0
	// z-index 60
	&:before
		content ''
		height 0
		padding-top 56.25%
		display block
	&:after
		content: ''
		display block
		position: absolute
		top: 0
		left 0
		right 0
		width: 100%
		height 70px
	img,
	iframe
		position absolute
		width 85%
		height 100%
		display block
		background-color #000
		border-radius 5px
		border: 0
		top 3%
		left 0
		right 0
		bottom 0
		cursor pointer
		margin 0 auto
	img,
	iframe
		position absolute
		width 100%
		height 100%
		display block
		background-color #000
		border-radius 0
		border: 0
		top 0
		left 0
		right 0
		bottom 0
		cursor pointer
		margin 0 auto
.button
	display block
	text-align center
	margin 0 auto
	text-decoration none
	color: rgb(255, 255, 255);
	width: 100%
	max-width: 280px;
	padding: 22px 10px
	background-color: #b76afb
	transition: all .3s ease
	&:focus
		text-decoration none
		color #fff
	&:hover
		text-decoration none
		color #fff
		background-color: #b76afb - 15%
	&-left
		margin-left: 0
.general-title
	font-size: 30px;
	font-family: MBk
	font-weight: 900
	color: rgb(0, 0, 0);
	line-height: 1.333;
	margin-bottom: 35px
	&-center
		text-align center
	small
		display block
		font-size: 20px