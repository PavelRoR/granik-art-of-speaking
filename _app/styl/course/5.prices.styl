#prices
	padding 60px 0
	background-image url(../img/backs/wishes.png)
	background-repeat no-repeat
	background-position: center
.packet
	margin 0 auto 30px
	border-radius: 50px;
	box-shadow: 0px 1px 44.16px 1.84px rgba(0, 0, 0, 0.1);
	padding 40px 30px
	background-color #fff
	width 100%
	max-width 320px
	text-align center
	min-height 374px
	&-head
		&-title
			font-size: 24px
			font-family: MBk
			font-weight: bold
			small
				display block
				font-size: 18px
				font-family: M
				font-weight: normal
	&-body
		padding 20px 0
		min-height 552px
		&-title
			font-size: 18px
			font-family: MBd
			font-weight: bold
			margin-bottom: 10px
			span
				display block
				font-family: M
				font-weight: normal
				font-size: 16px
		&-text
			font-size: 16px
			margin-top: 10px
.more-button
	display inline-block
	font-size: 16px
	font-style: italic
	border-bottom: 1px dotted
	color rgba(0,0,0,.4)
	transition: all .5s ease
	&:focus
		text-decoration none
	&:hover
		text-decoration none
		color #000
.cost
	font-size: 22px
	font-family: MBd
	font-weight: bold
	margin-bottom: 10px
	span
		display block
		font-size: 30px
		font-family: MBk
		font-weight: 900
	&-full
		span
			text-decoration line-through
			&.unbroken
				text-decoration none
	&-sale
		color red
	&-today
		color limegreen
		margin-bottom: 20px
.prepayment
	text-align center
	margin-top: 30px
	&-title
		font-size: 30px
		font-family: MBk
		font-weight: 900
		color red
	&-text
		font-size: 20px
		margin 10px 0 20px
.timer-title
	text-align: center
	font-size: 32px
	color red
	font-family: MBk
	font-weight: 900
	// text-transform: uppercase
	margin-top: 35px
.flip-clock-wrapper
	width: 100%
	max-width 460px
	margin-top: 30px
.flip-clock-divider .flip-clock-label
	color #000
.flip-clock-dot
	background-color: #4d67ac
.flip-clock-wrapper ul li a div div.inn
	color: #fff
	background-color: #4d67ac
	text-shadow: 2px 2px 2px rgba(#022a37,.6);