#technics
	padding 60px 0
.technics-img
	display block
	width 100%
	max-width 670px
	margin 30px auto 0
.technics-list
	li
		position relative
		margin-bottom: 20px
		padding-left: 65px
		list-style: none
		min-height 53px
		&:last-child
			margin-bottom: 45px
		span
			font-family: MBd
			font-weight: bold
		&:before
			content '+'
			display block
			border-radius: 50%;
			box-shadow: 0px 1px 44.16px 1.84px rgba(0, 0, 0, 0.1);
			position: absolute;
			width: 53px;
			height: 53px;
			top 0
			left 0
			font-size: 30px
			font-family: MBd
			font-weight: bold
			color #9620ff
			line-height: 53px
			text-align center